name: Deploy to Production

# DÉSACTIVÉ: Ce workflow nécessite des secrets SSH non configurés.
# Le déploiement se fait via Render (déploiement automatique depuis GitHub).
# Pour activer ce workflow, configurez les secrets GitHub: DEPLOY_HOST, DEPLOY_USER, DEPLOY_SSH_KEY

# on:
#   push:
#     branches: [ main ]
#   workflow_dispatch:
on:
  workflow_dispatch:

jobs:
  deploy:
    name: Deploy
    runs-on: ubuntu-latest
    # Note: Si les secrets SSH ne sont pas configurés, le job échouera lors de l'exécution
    # Ce workflow est désactivé par défaut (workflow_dispatch uniquement)
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Deploy to server
      uses: appleboy/ssh-action@v1
      with:
        host: ${{ secrets.DEPLOY_HOST }}
        username: ${{ secrets.DEPLOY_USER }}
        key: ${{ secrets.DEPLOY_SSH_KEY }}
        port: ${{ secrets.DEPLOY_PORT || 22 }}
        script: |
          cd ${{ secrets.DEPLOY_PATH || '/opt/rag-photographie' }}
          git pull origin main
          docker-compose -f docker-compose.prod.yml pull
          docker-compose -f docker-compose.prod.yml up -d --build
          docker-compose -f docker-compose.prod.yml exec -T backend python -m alembic upgrade head || true
          docker-compose -f docker-compose.prod.yml restart backend
          
    - name: Health Check
      uses: appleboy/ssh-action@v1
      with:
        host: ${{ secrets.DEPLOY_HOST }}
        username: ${{ secrets.DEPLOY_USER }}
        key: ${{ secrets.DEPLOY_SSH_KEY }}
        script: |
          sleep 10
          curl -f http://localhost:8001/health || exit 1

